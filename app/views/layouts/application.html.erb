<!DOCTYPE html>
<html>
<head>
  <title>Sushi Kushi Toyo</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,600' rel='stylesheet' type='text/css'>
</head>
<body>
<!--header-->
	<header>
		<div class="row">
			<div class="small-3 columns">
				<h3><%=link_to('Kushi Toyo', main_content_home_path)%></h3>
				</div>
			<div class="small-6 columns">
				<ul class="navbar-list">
					<li><%=link_to('Home', main_content_home_path, :class=>"button radius small nav-btn")%></li>
					<li><%=link_to('Menu', food_item_menu_path, :class=>"button radius small nav-btn")%></li>
					<li><%=link_to('Find Us', main_content_contact_path, :class=>"button radius small nav-btn")%></li>
					
				</ul>
			</div>
			<div class="small-3 columns">
				<ul class="navbar-list right">
					<li><a class="button radius tiny green-btn" href="https://www.facebook.com/pages/Sushi-Kushi-Toyo-Lake-Forest-IL/109604069080302" target="_blank">Facebook</a></li>
					<li><a class="button radius tiny green-btn" href="https://twitter.com/SushiKushiToyo" target="_blank">Twitter</a></li>
				</ul>
			</div>
		</div>
	</header>
<!--/header-->

<div style="min-height:960px;">
	<%= yield %>
</div>

<footer style="postion:absolute; bottom:0; background-color:rgb(0,0,0);">
		<div class="row">
			<div class="small-12 columns" style="postion:absolute; bottom:0; left:0; background-color:rgb(0,0,0);">
				<ul class="footer-list right">
					<li><%=link_to('Home', main_content_home_path, :class=>"button radius small nav-btn")%></li>
					<li><%=link_to('Menu', food_item_menu_path, :class=>"button radius small nav-btn")%></li>
					<li><%=link_to('Find Us', main_content_contact_path, :class=>"button radius small nav-btn")%></li>
				</ul>
			</div>	
		</div>
</footer>
	
	<script>
  jQuery(function(){
   
		 jQuery(document).foundation('orbit',{bullets:false});   
		  jQuery(document).foundation();
	})
</script>

<!-- Check for Zepto support, load jQuery if necessary -->
<script>
  document.write('<script src=js/vendor/'
    + ('__proto__' in {} ? 'zepto' : 'jquery')
    + '.js><\/script>');
</script>
</body>
</html>
